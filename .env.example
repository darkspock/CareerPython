# AI Resume Enhancement Platform - Development Environment Configuration

# Database Configuration
POSTGRES_DB=airesume_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@db:5432/airesume_dev

# Application Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=true
ENVIRONMENT=development

# AI Service Configuration (xAI/Grok)
XAI_API_KEY=your-xai-api-key-here
XAI_BASE_URL=https://api.x.ai/v1

# Email Service Selection (smtp or mailgun)
EMAIL_SERVICE=smtp

# SMTP Configuration (for development with Mailpit)
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@careerpython.local
SMTP_USE_TLS=false

# Mailgun Configuration (for production)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_API_URL=https://api.mailgun.net/v3

# Frontend and Support Configuration
FRONTEND_URL=http://localhost:5173
SUPPORT_EMAIL=support@careerpython.com

# Payment Configuration (Stripe - use test keys for development)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Feature Flags
FEATURE_FLAGS_ENABLED=true

# Monitoring (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
ADMIN_EMAIL=admin@yourdomain.com
ALERT_EMAILS=admin@yourdomain.com,dev@yourdomain.com
ALERT_WEBHOOK_URL=https://your-webhook-url.com